{
  "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "outDir": "./dist",
      "rootDir": "./",
      "allowJs": true,
      "esModuleInterop": true
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.js",
      "lame-bot/**/*.ts",
      "lame-bot/**/*.js",
      "vivi/**/*.ts",
      "vivi/**/*.js"
  ],
  "exclude": [
      "node_modules"
  ]
}
